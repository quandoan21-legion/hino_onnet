<odoo>
    <record id="view_third_party_registration_form" model="ir.ui.view">
        <field name="name">third.party.registration.form</field>
        <field name="model">third.party.registration</field>
        <field name="arch" type="xml">
            <form string="Register for 3rd unit/ Packaging house">
                <header>
                    <button name="action_submit" string="Send" type="object" class="oe_highlight"
                            visible="x_state == 'draft'"/>
                    <button name="action_confirm" string="Approve" type="object" class="oe_highlight"
                            visible="x_state == 'waiting_approval'"/>
                    <button name="action_refuse" string="Reject" type="object" class="oe_highlight"
                            visible="x_state == 'waiting_approval'"/>
                    <button name="action_cancel" string="Cancel" type="object" class="oe_highlight"
                            visible="x_state == 'draft'"/>
                </header>
                <field name="x_state" widget="statusbar"
                               statusbar_visible="draft,waiting_approval,approved,rejected,cancelled"/>
                <sheet>
                    <group>
                        <field name="x_name"/>
                        <field name="x_registration_code"/>
                        <field name="x_customer_name" widget="many2one" options="{'no_open': True}"/>
                        <field name="x_customer_code" readonly="1"/>
                        <field name="x_representative" widget="many2one" options="{'no_open': True}"/>
                    </group>
                    <group>
                        <field name="x_phone"/>
                        <field name="x_business_field"/>
                        <field name="x_registration_type"/>
                        <field name="x_attach_files" widget="binary"/>
                    </group>
                    <group>
                        <field name="x_ability_distribute_standards"/>
                        <field name="x_barrels_3rd_processes"/>
                        <field name="x_unit_3rd_commercial"/>
                        <field name="x_note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_third_party_registration_tree" model="ir.ui.view">
        <field name="name">third.party.registration.tree</field>
        <field name="model">third.party.registration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="x_registration_code"/>
                <field name="x_name"/>
                <field name="x_customer_name"/>
                <field name="x_phone"/>
                <field name="x_state"/>
            </tree>
        </field>
    </record>

    <record id="action_third_party_registration_tree" model="ir.actions.act_window">
        <field name="name">List of Third Party Registrations</field>
        <field name="res_model">third.party.registration</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <!--        <field name="search_view_id" ref="search_third_party_registration"/>-->
    </record>

</odoo>
